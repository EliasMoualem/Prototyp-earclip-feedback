<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controlcenter_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/oled_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:text="OLED"
        app:layout_constraintEnd_toStartOf="@+id/led_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/poke_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:text="Poke"
        app:layout_constraintEnd_toStartOf="@+id/buzzer_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oled_button" />

    <Button
        android:id="@+id/led_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="LED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oled_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vibration_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginBottom="36dp"
        android:text="Vibration"
        app:layout_constraintBottom_toTopOf="@+id/CC_vibfunc_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buzzer_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="Buzzer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/poke_button"
        app:layout_constraintTop_toBottomOf="@+id/led_button" />

    <EditText
        android:id="@+id/CC_vibfunc_field"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="1-123"
        android:inputType="number"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>